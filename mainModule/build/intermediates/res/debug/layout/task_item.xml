<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/idTime"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="@string/txtTime"
        android:textSize="40sp" />

    <TextView
            android:id="@+id/idModeOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtTypeOpen"
            android:layout_below="@id/idTime"
            android:layout_marginLeft="15dp"
            android:textColor="@color/GREEN"
            android:textSize="12sp" />
    
    <TextView
            android:id="@+id/idRepeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtRepeatDesc"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/idTime"
            android:layout_toRightOf="@id/idModeOn"
            android:textSize="12sp" />
    
     <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp" 
        android:orientation="vertical"
        >
     
        <ToggleButton
            android:id="@+id/idTgButton"
            android:layout_marginTop="15dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            />
    
         <TextView
            android:id="@+id/idTaskDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtAction"
            android:layout_gravity="center"
            android:textSize="12sp" />
       </LinearLayout>  
</RelativeLayout>
